<UserControl x:Class="CarSales.View.UserControls.SearchBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CarSales.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="400">
    <Grid>
        <TextBox x:Name="txtInput" VerticalContentAlignment="Center" FontSize="16" FontFamily="Light" Margin="0,0,40,0" />
        <Button x:Name="btnSearch" HorizontalAlignment="Right" Width="40" Background="Transparent">
            <Image Source="/CarSales;component/Icons/search_icon.png"/>
        </Button>
    </Grid>
</UserControl>
